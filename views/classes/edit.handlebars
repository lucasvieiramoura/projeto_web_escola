{{#each errors}}
<div class="alert alert-danger">
    {{text}}
</div>
{{else}}
{{/each}}
<div class="card card-body">
    <h3>{{pageTitle}}</h3>
     <form action="/classes/{{classe.id}}?_method=PUT" method="post">
     <input type="hidden" name="_method" value="PUT" />
        <div class="form-group">
            <label for="nome">Nome</label>
            <input name="nome" class="form-control" value="{{classe.nome}}"disabled>
        </div>
        <div class="form-group">
            <label for="cor">Cor</label>
            <input name="cor" class="form-control" value="{{classe.cor}}"disabled>
        </div>
        <div class="form-group">
            <label for="numbersala">Número da Sala</label>
            <input type="number" name="numbersala" value="{{classe.numbersala}}" class="form-control">
        </div>
        <div class="form-group">
            <label for="capacidade">Capacidade</label>
            <input type="number" name="capacidade" value="{{classe.capacidade}}" class="form-control">
        </div>
        <div class="form-group">
            <label for="professores">Profissionais</label>
            <select name="professores" class="form-control">
                <option value="{{classe.profisional}}"></option>
                <option type="text" value="Professor">Professor</option>
                <option type="text" value="Coordenador">Coordenador</option>
                <option type="text" value="Cadastramentos">Cadastramento</option>
                <option type="text" value="Música">Música</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
     </form>
</div>