{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="card card-body">
    <h3>{{title}}</h3>
    <form action="/classes" method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" name="nome" class="form-control"required>
        </div>
        <div class="form-group">
            <label for="cor">Cor</label>
            <select name="cor" class="form-control">
                <option value="{{classe.cor}}"></option>
                <option type="text" value="Rosa">Rosa</option>
                <option type="text" value="Roxa">Roxa</option>
                <option type="text" value="Vermelho">Vermelho</option>
                <option type="text" value="Verde">Verde</option>
                <option type="text" value="Azul">Azul</option>
                <option type="text" value="Amarelo">Amarelo</option>
                <option type="text" value="Prata">Prata</option>
                <option type="text" value="Laranja">Laranja</option>
            </select>
        </div>
        <div class="form-group">
            <label for="numbersala">Numero da Sala</label>
            <input type="number" name="numbersala" class="form-control"required>
        </div>
        <div class="form-group">
            <label for="capacidade">Capacidade da Sala</label>
            <input type="number" name="capacidade" class="form-control"required>
        </div>
        <div class="form-group">
            <label for="professores">Professor da Turma</label>
             <select name="professores" class="form-control">
                <option value="{{classe.profisional}}"></option>
                <option type="text" value="Professor">Professor</option>
                <option type="text" value="Coordenador">Coordenador</option>
                <option type="text" value="Cadastramentos">Cadastramento</option>
                <option type="text" value="Música">Música</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>